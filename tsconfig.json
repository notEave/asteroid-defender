{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./bin",
        "newLine": "LF",
        "charset": "utf8",
        "removeComments": true,

        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "allowJs": false,
        "sourceMap": false
    },

    "include": [
        "source/**/*"
    ],

    "exclude": [
        "**/*.test.ts"
    ]
}
